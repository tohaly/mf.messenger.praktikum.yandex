{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "removeComments": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "outDir": "./dist/",
    "module": "es6",
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "src/declaration.d.ts"],
  "exclude": ["node_modules", "./src/**/*.test.ts"]
}
